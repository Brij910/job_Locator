<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout3"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.androidtutorialshub.JobSeeker.activities.data2">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view0"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="#4B4848"


                    app:cardBackgroundColor="#4B4848">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/lname1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="6dip"
                                android:paddingBottom="2dip"

                                android:textColor="#ffffff"
                                android:textSize="20sp"
                                android:textStyle="bold" />



                        </TableRow>

                    </TableLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:background="@color/colorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="3dp"
                    card_view:cardUseCompatPadding="true">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/lname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dip"
                            android:paddingBottom="2dip"
                            android:text="Location of Company:  "
                            android:textColor="#444444"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/lname"
                        android:paddingTop="6dip"
                        android:paddingBottom="2dip"
                        android:textColor="#636060"
                        android:textSize="18sp" />
                </TableRow>
                    </TableLayout>

                </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="3dp"
                card_view:cardUseCompatPadding="true">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/cname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lname"
                    android:paddingTop="6dip"
                    android:paddingBottom="2dip"
                    android:text="Company Name:  "
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dip"
                android:paddingTop="6dip"
                android:textSize="18sp"
                android:layout_below="@+id/location"
                android:layout_toRightOf="@+id/cname"
                android:textColor="#636060" />
            </TableRow>
            </TableLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="3dp"
                card_view:cardUseCompatPadding="true">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/tname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cname"
                    android:paddingTop="6dip"
                    android:paddingBottom="2dip"
                    android:text="Title of Job:  "
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/company"
                    android:layout_toRightOf="@+id/tname"
                    android:paddingTop="6dip"
                    android:textSize="18sp"
                    android:paddingBottom="2dip"
                    android:textColor="#636060" />
            </TableRow>
            </TableLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/dname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tname"
                    android:paddingTop="6dip"
                    android:paddingBottom="2dip"
                    android:text="Description of Job:  "
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

                <TableRow
                    android:layout_width="394dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title"
                        android:justificationMode="inter_word"
                        android:paddingTop="6dip"
                        android:textSize="18sp"
                        android:paddingBottom="2dip"
                        android:textColor="#636060" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/ksname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tname"
                        android:paddingTop="6dip"
                        android:paddingBottom="2dip"
                        android:text="Key Skills:  "
                        android:textColor="#444444"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>


                <TableRow
                    android:layout_width="394dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/keyskills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/description"
                        android:layout_toRightOf="@+id/dname"
                        android:paddingTop="6dip"
                        android:paddingBottom="2dip"
                        android:textColor="#636060"
                        android:textSize="18sp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/exname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingTop="6dip"
                        android:paddingBottom="2dip"
                        android:text="Experience:  "
                        android:textColor="#444444"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:layout_width="394dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/exname"

                        android:paddingTop="6dip"
                        android:paddingBottom="2dip"
                        android:textColor="#636060"
                        android:textSize="18sp" />
                </TableRow>
            </TableLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view5"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_gravity="center">


                <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TableLayout>
            </androidx.cardview.widget.CardView>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="710dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#497DFF"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="30dp"
            android:textColor="#FFF"
            android:text="APPLY" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="top|end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:elevation="0dp"
            android:backgroundTint="#004B4848"
            android:src="@drawable/star2"
            app:backgroundTint="#004B4848"
            app:borderWidth="0dp"
            app:fabSize="normal"
            app:maxImageSize="30dp" />




    </RelativeLayout>



    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/header"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        />


</androidx.drawerlayout.widget.DrawerLayout>